<Window x:Class="application_Piringer_Mark.bejelentkezes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bejelentkezés" Height="200" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="txtUsername" PlaceholderText="Felhasználónév" Margin="5"/>
        <PasswordBox x:Name="txtPassword" PlaceholderText="Jelszó" Margin="5"/>
        <Button Content="Bejelentkezés" Click="BtnLogin_Click" Margin="5"/>
    </StackPanel>
</Window>
